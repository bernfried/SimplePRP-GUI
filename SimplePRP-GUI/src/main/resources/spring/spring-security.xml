<beans:beans 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:beans="http://www.springframework.org/schema/beans"
    xmlns:security="http://www.springframework.org/schema/security"
    xsi:schemaLocation="
    	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.1.xsd">
         
    <security:global-method-security mode="aspectj" pre-post-annotations="enabled" proxy-target-class="true" />    
    
    <security:http pattern="/resources/**" security="none"/>
    
    <security:http auto-config="true" use-expressions="true">
        
        <security:intercept-url pattern="/static/j_spring_security_check" access="isAnonymous()" />
        <security:intercept-url pattern="/static/j_spring_security_logout" access="isAuthenticated()" />
        <security:intercept-url pattern="/public/**" access="permitAll" />
        <security:intercept-url pattern="/public/login" access="isAnonymous()" />
        <security:intercept-url pattern="/testdata/**" access="permitAll" />
        <security:intercept-url pattern="/error/**" access="permitAll" />
        <security:intercept-url pattern="/internal/**" access="isAuthenticated()" />
        
        <security:access-denied-handler error-page="/error/access-denied"/>
        
        <security:form-login login-processing-url="/static/j_spring_security_check"
        					 login-page="/public/login" 
        					 default-target-url="/internal/home" 
        					 authentication-failure-url="/public/login?error=true" />
        					 
        <security:logout logout-url="/static/j_spring_security_logout"
        				 logout-success-url="/public/login?logout=true"
        				 invalidate-session="false"
            			 delete-cookies="JSESSIONID,SPRING_SECURITY_REMEMBER_ME_COOKIE" />
        
        <security:remember-me key="simpleprpguiRememberMeKey" token-validity-seconds="2419200"/>
            			 
        <security:session-management invalid-session-url="/public/login?timeout=true" 
        							 session-fixation-protection="migrateSession">
 	        <security:concurrency-control max-sessions="1" error-if-maximum-exceeded="true" />
        </security:session-management>

    </security:http>

    <security:authentication-manager alias="authenticationManager">
        <security:authentication-provider ref="customAuthenticationProvider"/>
    </security:authentication-manager>

 	<!-- Security -->
	<beans:bean id="shaPwdEncoder" class="org.springframework.security.authentication.encoding.ShaPasswordEncoder">
        <beans:constructor-arg value="256"/>
    </beans:bean>
	<beans:bean id="userDao" class="de.webertise.simpleprpgui.security.dao.UserDao"/>
	<beans:bean id="userDetailsService" class="de.webertise.simpleprpgui.security.service.CustomUserDetailsService"/>
	<beans:bean id="customAuthenticationProvider" class="de.webertise.simpleprpgui.security.CustomAuthenticationProvider"/>
    <beans:bean id="userService" class="de.webertise.simpleprpgui.service.impl.UserService"/>
    
</beans:beans>
